<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.deelock.wifilock.overwrite.ObliqueView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/ble_add_fprint_back"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="@dimen/title_bar_height"
        android:layout_marginLeft="@dimen/icon_left_margin"
        android:background="?android:attr/selectableItemBackground"
        android:src="@mipmap/left_arrow_black" />

    <TextView
        android:id="@+id/ble_add_fprint_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x150"
        android:text="添加指纹"
        android:textColor="@color/deep_dark_text_color"
        android:textSize="@dimen/x50" />

    <TextView
        android:id="@+id/ble_add_fprint_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ble_add_fprint_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y20"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/x6"
        android:padding="@dimen/x30"
        android:text="@string/ble_add_fprint"
        android:textColor="@color/colorCenterName"
        android:textSize="@dimen/x30" />

    <ImageView
        android:layout_width="@dimen/x202"
        android:layout_height="@dimen/x191"
        android:layout_below="@id/ble_add_fprint_notice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x83"
        android:src="@mipmap/bind_lock_shadow" />

    <Button
        android:id="@+id/ble_add_fprint_submit"
        android:layout_width="@dimen/x144"
        android:layout_height="@dimen/x144"
        android:layout_below="@id/ble_add_fprint_notice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x50"
        android:background="@mipmap/configure"
        android:text="开始"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/common_text_size" />

    <ImageView
        android:layout_width="@dimen/x490"
        android:layout_height="@dimen/x580"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ble_add_fprint_img" />

</RelativeLayout>