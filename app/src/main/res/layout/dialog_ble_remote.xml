<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x480"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="@string/function_remote_pwd"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:paddingLeft="@dimen/x40"
        android:paddingRight="@dimen/x40"
        android:text="@string/remote_pwd_text"
        android:textColor="@color/ble_default_text"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x80"
        android:gravity="center">

        <Button
            android:id="@+id/fun_ble_btn3"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x80"
            android:background="@drawable/login_select_bg"
            android:text="开启"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/fun_ble_btn4"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="@dimen/x50"
            android:layout_toRightOf="@id/fun_ble_btn3"
            android:background="@drawable/bottom_dialog_close"
            android:text="关闭"
            android:textColor="@color/ble_default_select" />

    </RelativeLayout>

</LinearLayout>
