<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_title_gradient"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/bg_title_gradient">

        <ImageButton
            android:id="@+id/add_lock_back"
            android:layout_width="@dimen/title_bar_height"
            android:layout_height="@dimen/title_bar_height"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/icon_left_margin"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/x26"
            android:src="@mipmap/left_arrow_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择智能门锁"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/title_text_size" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x50"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="@dimen/x70">

        <ImageView
            android:id="@+id/add_lock_wifi"
            android:layout_width="@dimen/x600"
            android:layout_height="@dimen/x300"
            android:scaleType="fitXY"
            android:src="@drawable/add_wifi_lock" />

        <ImageView
            android:id="@+id/add_lock_ble"
            android:layout_width="@dimen/x600"
            android:layout_height="@dimen/x300"
            android:layout_marginTop="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/add_ble_lock" />

    </LinearLayout>
</LinearLayout>