<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.deelock.wifilock.overwrite.ObliqueView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/back_ib"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="@dimen/title_bar_height"
        android:layout_marginLeft="@dimen/icon_left_margin"
        android:background="?android:attr/selectableItemBackground"
        android:src="@mipmap/left_arrow_black" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加指纹"
        android:textSize="@dimen/x50"
        android:textColor="@color/deep_dark_text_color"
        android:layout_marginTop="@dimen/y60"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/checkbox_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tv"
        android:layout_marginTop="@dimen/y30"
        android:text="@string/manager_notice"
        android:textColor="@color/common_text_color"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/x23" />

    <TextView
        android:id="@+id/notice_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/checkbox_cb"
        android:lineSpacingExtra="@dimen/x6"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/x30"
        android:textColor="@color/colorCenterName"
        android:layout_marginTop="@dimen/y20"
        android:text="@string/link_lick_notice" />

    <ImageView
        android:layout_width="@dimen/x202"
        android:layout_height="@dimen/x191"
        android:layout_below="@+id/notice_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x83"
        android:src="@mipmap/bind_lock_shadow" />

    <Button
        android:id="@+id/configure_ib"
        android:layout_width="@dimen/x144"
        android:layout_height="@dimen/x144"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x50"
        android:layout_below="@+id/notice_tv"
        android:text="下一步"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/common_text_size"
        android:background="@mipmap/configure" />

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="@dimen/x360"
        android:layout_height="@dimen/x591"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/lock_back" />

    <ImageView
        android:id="@+id/hand_iv"
        android:layout_width="@dimen/x463"
        android:layout_height="@dimen/x416"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:src="@mipmap/left_hand"/>

</RelativeLayout>