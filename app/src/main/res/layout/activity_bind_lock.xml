<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.deelock.wifilock.overwrite.ObliqueView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/back_ib"
        android:layout_width="@dimen/title_bar_height"
        android:layout_height="@dimen/title_bar_height"
        android:layout_marginLeft="@dimen/icon_left_margin"
        android:background="?android:attr/selectableItemBackground"
        android:src="@mipmap/left_arrow_black" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x105"
        android:text="门锁配置"
        android:textColor="@color/deep_dark_text_color"
        android:textSize="@dimen/x50" />

    <TextView
        android:id="@+id/notice_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_tv"
        android:lineSpacingExtra="@dimen/x16"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/title_text_size"
        android:layout_marginTop="@dimen/x62"
        android:textColor="@color/colorCenterName"
        android:text="@string/bind_lock_notice"
        android:gravity="center_horizontal"/>

    <ImageView
        android:layout_width="@dimen/x202"
        android:layout_height="@dimen/x191"
        android:layout_below="@+id/notice_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x83"
        android:src="@mipmap/bind_lock_shadow" />

    <Button
        android:id="@+id/configure_ib"
        android:layout_width="@dimen/x144"
        android:layout_height="@dimen/x144"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x50"
        android:layout_below="@+id/notice_tv"
        android:text="开始"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/common_text_size"
        android:background="@mipmap/configure" />

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="@dimen/x360"
        android:layout_height="@dimen/x591"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/lock_back" />

    <ImageView
        android:id="@+id/mag_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y629"
        android:layout_marginLeft="@dimen/x158"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/mag_config"
        android:visibility="gone"/>
    
    <ImageView
        android:id="@+id/hand_iv"
        android:layout_width="@dimen/x484"
        android:layout_height="@dimen/x418"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/right_hand"
        android:visibility="visible"/>

</RelativeLayout>