<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_add_info"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/print_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_marginBottom="@dimen/x60"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/first_iv"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:src="@mipmap/popwindow_print" />

        <TextView
            android:id="@+id/first_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x19"
            android:text="添加指纹"
            android:textColor="#aa000000"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/password_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_marginBottom="@dimen/x60"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/secondIv"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:src="@mipmap/popwindow_password" />

        <TextView
            android:id="@+id/secondTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x19"
            android:text="添加密码"
            android:textColor="#aa000000"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:layout_marginBottom="@dimen/x100"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/y50"
            android:src="@mipmap/add_card" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x19"
            android:text="添加卡片"
            android:textColor="#aa000000"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/window_del"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/x120"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x80"
        android:src="@mipmap/x" />

</LinearLayout>