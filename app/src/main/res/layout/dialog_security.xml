<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/x260">

    <View
        android:id="@+id/bg_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y408"
        android:layout_marginTop="@dimen/y81"
        android:layout_marginLeft="@dimen/x85"
        android:layout_marginRight="@dimen/x85"
        android:background="@drawable/bg_equipment_bottom" />

    <View
        android:id="@+id/bottom_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y101"
        android:layout_marginLeft="@dimen/x85"
        android:layout_marginRight="@dimen/x85"
        android:layout_below="@+id/bg_v"
        android:background="@drawable/bg_security_bottom"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y140"
        android:textSize="@dimen/x36"
        android:textColor="@color/title_gradient_right"
        android:text="求助内容预览"
        android:layout_centerHorizontal="true"/>
    
    <TextView
        android:id="@+id/phoneTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x152"
        android:textColor="@color/deeper_dark_color"
        android:layout_alignTop="@id/bg_v"
        android:textSize="@dimen/x28"
        android:layout_marginTop="@dimen/y142"/>

    <TextView
        android:id="@+id/contentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x152"
        android:layout_below="@+id/phoneTv"
        android:layout_marginTop="@dimen/y23"
        android:textSize="@dimen/x28"
        android:textColor="@color/deeper_dark_color"
        android:layout_marginEnd="@dimen/x166"/>

    <TextView
        android:id="@+id/cancelTv"
        android:layout_width="@dimen/x290"
        android:layout_height="@dimen/y101"
        android:text="取消"
        android:textSize="@dimen/x34"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="@dimen/x85"
        android:layout_below="@+id/bg_v"/>

    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/x70"
        android:background="#801a937d"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bg_v"
        android:layout_marginTop="@dimen/y16"/>

    <TextView
        android:id="@+id/ensureTv"
        android:layout_width="@dimen/x290"
        android:layout_height="@dimen/y101"
        android:text="开启"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/x34"
        android:gravity="center"
        android:layout_marginEnd="@dimen/x85"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/bg_v"/>

</RelativeLayout>