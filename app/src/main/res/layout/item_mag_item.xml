<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y140"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <com.deelock.wifilock.overwrite.ScrollItem
        android:id="@+id/si"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_marginLeft="@dimen/common_left_margin"
            android:layout_centerVertical="true"
            android:src="@mipmap/mag_item_green"/>

        <TextView
            android:id="@+id/state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common_text_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x150"
            android:textColor="@color/deeper_dark_color"/>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x28"
            android:textColor="@color/colorCenterName"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x60"/>

        <ImageButton
            android:id="@+id/delete_ib"
            android:layout_width="@dimen/x140"
            android:layout_height="match_parent"
            android:background="#f54528"
            android:src="@mipmap/delete_white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/rx140"
            android:scaleType="centerInside" />

    </com.deelock.wifilock.overwrite.ScrollItem>

    <View
        android:id="@+id/divider_v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="@dimen/common_left_margin"
        android:layout_marginLeft="@dimen/common_left_margin"
        android:layout_alignParentBottom="true"
        android:background="@color/divider"/>

</LinearLayout>