<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/bg_title_gradient">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="@drawable/bg_title_gradient">

            <ImageButton
                android:id="@+id/back_ib"
                android:layout_width="@dimen/title_bar_height"
                android:layout_height="match_parent"
                android:padding="@dimen/x26"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_centerVertical="true"
                android:src="@mipmap/left_arrow_white"
                android:background="?android:attr/selectableItemBackground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="用户管理"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/title_text_size" />

            <ImageButton
                android:id="@+id/add_ib"
                android:layout_width="@dimen/title_bar_height"
                android:layout_height="@dimen/title_bar_height"
                android:padding="20dp"
                android:layout_marginRight="@dimen/icon_left_margin"
                android:layout_alignParentRight="true"
                android:src="@mipmap/equipment_add"
                android:background="?android:attr/selectableItemBackground" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:overScrollMode="never"
            android:paddingTop="@dimen/y40">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</layout>